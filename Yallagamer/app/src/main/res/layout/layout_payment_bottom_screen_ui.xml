<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Price Details (2 Items)"
        android:background="@color/light_pink"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:paddingLeft="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total MRP"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="Total MRP"
            android:id="@+id/TvMrp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/RlDiscount"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount on MRP"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/TvDiscount"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:text="Taxation Fee"
            android:id="@+id/TvTaxation"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/proxima_nova_regular"
            android:paddingLeft="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvTaxation"
            android:layout_marginHorizontal="@dimen/dp_20" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_pink"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/border_line"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_height="@dimen/dp_40">

        <EditText
            android:id="@+id/etPromocode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Tvapply"
            android:background="@null"
            android:singleLine="true"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:hint="Gift Certificate or Promo code "
            android:paddingStart="@dimen/dp_10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Apply "
            android:id="@+id/Tvapply"
            android:paddingHorizontal="@dimen/dp_30"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_margin="-5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_regular"
            android:background="@drawable/dark_button_background_corner_a"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Coupon"
        android:textColor="@color/blue"
        android:layout_gravity="end"
        android:visibility="gone"
        android:id="@+id/TvRemoveCoupon"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount "
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/TvTotalAmount"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_pink"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/TvTextAMount"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_information"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_pink"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="ADADDD.R"
                android:id="@+id/TvAMountDetails"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textColor="@color/black"
                android:fontFamily="@font/proxima_nova_alt_light"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/TvSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lay_button_background"
            android:text="Checkout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>