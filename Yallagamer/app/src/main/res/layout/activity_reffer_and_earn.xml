<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".UserInterface.RefferAndEarnActivity">
    <include layout="@layout/layout_titlebar_add_address" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="fitXY"
        android:id="@+id/im1"
        android:src="@drawable/img_shout_earn"/>
    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/img_reward1"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADER.34"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yallacash earn"
                android:textColor="@color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="15sp" />
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:src="@drawable/img_rewards2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#d3d3d3"
        android:layout_margin="@dimen/dp_15" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite friends"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:textColor="@color/black"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite friends to end of Reason Sale and \nSave upto AED20 Extra"
        android:layout_marginVertical="@dimen/dp_5"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:textColor="@color/grey"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:layout_marginVertical="@dimen/dp_5"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:textColor="@color/grey"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="13sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="Invite Friends"
        android:gravity="center"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@drawable/dark_button_background"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:textColor="@color/white"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#d3d3d3"
        android:layout_margin="@dimen/dp_15" />
</LinearLayout>