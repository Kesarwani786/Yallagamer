<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Checkbox"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/Checkbox"
        android:id="@+id/RLMAin1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TvBankName"
            android:fontFamily="@font/proxima_nova_alt_bold"
            android:text="@string/BankName"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TvCardNo"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:layout_below="@+id/TvBankName"
            android:text="@string/BankName"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/RlMain"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/ImgBank"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_visa" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TvCardNo1"
                android:layout_centerHorizontal="true"
                android:textSize="6dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_alt_light"
                android:layout_below="@+id/ImgBank"
                android:text="@string/BankName"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_pink"
        android:layout_below="@+id/RLMAin1"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>