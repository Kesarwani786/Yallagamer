<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <include layout="@layout/layout_titlebar_add_address" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/RlPaymentSuccessfully">
        <RelativeLayout
            android:id="@+id/RlMian"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@drawable/border_line_grey_rounded_corner"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_10"
                android:id="@+id/img_checked"
                android:src="@drawable/ic_checked_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/img_checked"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_15"
                android:id="@+id/TvTextStatus"
                android:textColor="@color/black"
                android:text="Order Placed successfully!" />

            <TextView
                android:layout_below="@+id/TvTextStatus"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/img_checked"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_12"
                android:id="@+id/TvOrderId"
                android:textColor="@color/black"
                android:text="Order No. " />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:id="@+id/view1"
                android:layout_marginVertical="@dimen/dp_10"
                android:layout_below="@+id/TvOrderId"
                android:background="#EAE1E1" />

            <TextView
                android:layout_below="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_12"
                android:id="@+id/TvTextDescription"
                android:text="Your order is currently being procssed. you will recieve an order confirmation email shortly with the expected delievery dates for Your items.. " />

            <TextView
                android:layout_below="@+id/TvTextDescription"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_12"
                android:id="@+id/TvTextTip"
                android:text="TIP:  Manage your Orders from the My Order Section ." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/TvTextTip"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_5"
                android:id="@+id/RlViewOrder"
                android:background="@drawable/button_background_dark_grey"
                android:elevation="@dimen/dp_4">

                <TextView
                    android:id="@+id/TvViewOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="View Order"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/RlViewOrder"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_5"
                android:id="@+id/RlHome"
                android:background="@drawable/button_background_dark_grey"
                android:elevation="@dimen/dp_4">

                <TextView
                    android:id="@+id/TvHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/dp_15"
            android:layout_below="@+id/RlMian"
            android:id="@+id/TvTextAMountText12"
            android:textColor="@color/black"
            android:text="Order Details" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvTextAMountText12"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:id="@+id/RlUserDetails"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@drawable/border_line_grey_rounded_corner"
            android:paddingVertical="@dimen/dp_10">

            <TextView
                android:id="@+id/TvTextAMountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="ADEFF"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/TvAmountMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TvTextAMountText"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="Amount due at the time of delievery"
                android:textSize="@dimen/dp_12" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_below="@+id/TvAmountMessage"
                android:layout_marginVertical="@dimen/dp_10"
                android:background="#EAE1E1" />

            <TextView
                android:id="@+id/TvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/TvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TvUserName"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RlUserDetails"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@drawable/border_line_grey_rounded_corner"
            android:orientation="vertical"
            android:id="@+id/Linear1"
            android:visibility="gone"
            android:paddingVertical="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="Login with Password"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginVertical="@dimen/dp_10"
                android:background="#EAE1E1" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:hint="@string/layout_login_password"
                android:inputType="textPassword"
                android:textColorHint="@color/light_grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:hint="@string/layout_login_confirm_password"
                android:inputType="textPassword"
                android:textColorHint="@color/light_grey"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/RlLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/RlViewOrder"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_5"
                android:background="@drawable/button_background_dark_grey"
                android:elevation="@dimen/dp_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/RlFailure">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@drawable/ic_sad"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_18"
                android:text="Order Failed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/dp_13"
                android:gravity="center"
                android:textColor="#988888"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/TvfailureCaseDesc"
                android:text="Payment of ASASA.S is failed .There is some technical error.Your Order is not successfully Placed." />

            <TextView
                android:layout_marginVertical="@dimen/dp_5"
                android:background="@drawable/border_line_grey_rounded_corner_dark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/TvRetryMain"
                android:text="Retry Now"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/teal_700"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginVertical="@dimen/dp_5"
                android:id="@+id/RlHome1"
                android:background="@drawable/button_background_dark_grey"
                android:elevation="@dimen/dp_4">

                <TextView
                    android:id="@+id/TvHome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Back to Home"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>



        </LinearLayout>



    </RelativeLayout>
    <TextView
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@drawable/button_background_dark_grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/TvGoHome"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:text="Go to Home"
        android:textColor="@color/white"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="14sp" />

</LinearLayout>
