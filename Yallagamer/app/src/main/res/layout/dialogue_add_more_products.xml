<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingVertical="@dimen/dp_15"
    android:paddingHorizontal="@dimen/dp_10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/RlMain"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@+id/LinearMain"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:id="@+id/imgChecked"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:id="@+id/TVProductName"
            android:layout_toRightOf="@+id/imgChecked"
            android:fontFamily="@font/proxima_nova_regular"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TvAddedInCart"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/TVProductName"
            android:textSize="@dimen/dp_12"
            android:layout_toRightOf="@+id/imgChecked"
            android:text="Added in Cart"
            android:fontFamily="@font/proxima_nova_regular"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LinearMain"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="Cart Total"
            android:fontFamily="@font/proxima_nova_regular"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVProductName"
            android:textSize="@dimen/dp_12"
            android:layout_toRightOf="@+id/imgChecked"
            android:id="@+id/TvAmount"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:fontFamily="@font/proxima_nova_regular"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/RlMain"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp_5"
            android:textSize="@dimen/dp_15"
            android:id="@+id/TvContinueShopping"
            android:gravity="center"
            android:text="Continue Shopping "
            android:background="@drawable/border_line"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_height="@dimen/dp_50"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background_dark_grey"
            android:textStyle="bold"
            android:id="@+id/TvCheckout"
            android:text="Checkout"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_height="@dimen/dp_50"/>

    </LinearLayout>

</RelativeLayout>