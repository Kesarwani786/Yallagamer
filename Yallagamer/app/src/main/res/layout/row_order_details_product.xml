<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#F7F3F3"
    android:layout_marginHorizontal="@dimen/dp_15"
    app:contentPadding="@dimen/dp_8"
    android:layout_marginVertical="@dimen/dp_7"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RlImage"
            android:background="@drawable/border_line_grey_rounded_corner">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="55dp"
                android:id="@+id/ImgProdunt"
                android:layout_margin="@dimen/dp_5"
                android:scaleType="fitXY" />
        </RelativeLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_8"
            android:id="@+id/RlMain"
            android:layout_toEndOf="@+id/RlImage"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/proxima_nova_regular" />
            <TextView
                android:id="@+id/TvProductCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Category  Name "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="@dimen/dp_5"
                android:fontFamily="@font/proxima_nova_regular" />
            <TextView
                android:id="@+id/TvProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Quantity "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/proxima_nova_regular" />
            <View
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dp_10"
                android:layout_height="@dimen/dp_2"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/TvProductAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Amount "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/proxima_nova_regular" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>