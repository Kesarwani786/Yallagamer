<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_comment_a5_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pd_img_comment_by"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_more" />

        <TextView
            android:id="@+id/pd_tv_comment_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/proxima_nova_alt_bold"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/ratingBar_comment"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:clickable="false"
            android:stepSize="1"
            android:theme="@style/RatingBar"
            android:numStars="5" />

        <TextView
            android:id="@+id/pd_tv_rating_bar_comment_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:gravity="center|left"
            android:text="Verified Purchase"
            android:textColor="#ae1d36" />
    </LinearLayout>

    <TextView
        android:id="@+id/pd_tv_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:text="asdasdasdsd"
        android:fontFamily="@font/proxima_nova_regular"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pd_tv_comment_date"
        android:layout_width="match_parent"
        android:paddingVertical="5dp"
        android:paddingHorizontal="8dp"
        android:fontFamily="@font/proxima_nova_regular"
        android:layout_height="wrap_content"
        android:text="03 March 2021" />

    <TextView
        android:id="@+id/TvReview"
        android:textColor="@color/black"
        android:paddingHorizontal="8dp"
        android:text="asdasdasdasd"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_regular" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingBottom="5dp"
        android:background="#d3d3d3"/>

