<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:layout_height="wrap_content"
            android:text="@string/default_address"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/light_pink"
            android:fontFamily="@font/proxima_nova_regular" />

        <RelativeLayout
            android:layout_below="@+id/tv_name1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/RlMain"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/radio" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:layout_toEndOf="@+id/radio"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="18sp"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/tv_address_type"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:textColor="#346C70"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/radio"
                android:layout_below="@+id/tv_name"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:textColor="#346C70"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_toEndOf="@+id/radio"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/tv_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/tv_mobile"
                android:layout_below="@+id/tv_address"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginStart="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mobile"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/radio"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/black_border_bg"
                    android:text="@string/layout_address_remove"
                    android:gravity="center"
                    android:id="@+id/TvRemove"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/TvEditAddress"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/black_border_bg"
                    android:text="@string/layout_address_edit"
                    android:gravity="center"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_address_type"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:maxWidth="80dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginEnd="20dp"
                android:singleLine="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/green_border_bg"
                android:text="@string/layout_address_home"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_green1" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>