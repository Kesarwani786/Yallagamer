<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_product"
    android:layout_width="match_parent"
    android:background="@drawable/border_line_grey"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:elevation="0.9dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="match_parent"
            android:src="@drawable/placeholder"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_5"
            android:elevation="@dimen/dp_3"
            android:id="@+id/RlWishlist"
            android:padding="@dimen/dp_2"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/white_circle">

            <ImageView
                android:id="@+id/star_button"
                android:layout_width="30dp"
                android:layout_centerInParent="true"
                android:layout_height="30dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/RlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_brand1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@+id/LL1"
        android:paddingRight="5dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/proxima_nova_regular"
        android:singleLine="true"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/tv_item_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/strike_through"
            android:fontFamily="@font/proxima_nova_regular"
            android:gravity="center|left"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_regular"
            android:textStyle="bold"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>

