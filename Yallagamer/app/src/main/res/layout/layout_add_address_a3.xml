<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="BILLING ADDRESS"
        android:background="@color/light_pink"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/proxima_nova_bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_edittext_address"
        android:minHeight="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_address_my_billing_address"
            android:textSize="13dp"
            android:singleLine="true"
            android:layout_marginRight="35dp"
            android:layout_alignParentLeft="true"
            />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="SAVE ADDRESS AS"
        android:background="@color/light_pink"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/proxima_nova_bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/click_home"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#ffffff"
            android:text="@string/layout_address_home"
            android:background="@drawable/gray_border_bg"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/click_work"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="#4c989d"
            android:background="@drawable/green_border_bg"
            android:layout_marginHorizontal="10dp"
            android:text="@string/layout_address_work"
            android:gravity="center"

            />

    </LinearLayout>

</LinearLayout>